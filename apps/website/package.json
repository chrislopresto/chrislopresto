{
  "name": "@chrislopresto/website",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "prepare": "panda codegen",
    "build": "mkdir -p ./build/client ; mkdir -p ./build/server ; react-router build",
    "dev": "react-router dev",
    "deploy": "react-router build && NODE_ENV=production wrangler deploy",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "lint": "eslint",
    "start": "wrangler types && wrangler dev",
    "nuke": "rm -rf .wrangler .cache node_modules/.cache",
    "typegen": "wrangler types",
    "typecheck": "react-router typegen && tsc --build --noEmit",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build -o ./public/storybook ; touch ./public/storybook/.gitkeep",
    "chromatic:build-storybook": "storybook build --webpack-stats-json",
    "cloudflare:build": "echo hello ; pwd ; mkdir -p ./build/client ; mkdir -p ./build/server ; ls build/client ; ls build/server; echo done; pnpm run build && pnpm run storybook:build && cp -r ./public/storybook ./build/client/"
  },
  "dependencies": {
    "@radix-ui/react-accessible-icon": "^1.1.3",
    "@radix-ui/react-slot": "^1.2.0",
    "@react-router/cloudflare": "^7.5.0",
    "@react-router/node": "^7.5.0",
    "@react-router/serve": "^7.5.0",
    "@remixicon/react": "^4.6.0",
    "isbot": "^5.1.25",
    "jotai": "^2.12.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router": "^7.5.0",
    "session-context": "^0.0.6"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250327.0",
    "@eslint/js": "^9.23.0",
    "@mdx-js/rollup": "^3.1.0",
    "@pandacss/dev": "^0.53.3",
    "@pandacss/preset-panda": "^0.53.3",
    "@react-router/dev": "^7.5.0",
    "@storybook/addon-essentials": "^8.6.12",
    "@storybook/addon-interactions": "^8.6.12",
    "@storybook/addon-links": "^8.6.12",
    "@storybook/addon-themes": "^8.6.12",
    "@storybook/blocks": "^8.6.12",
    "@storybook/manager-api": "^8.6.12",
    "@storybook/react": "^8.6.12",
    "@storybook/react-vite": "^8.6.12",
    "@storybook/test": "^8.6.12",
    "@storybook/theming": "^8.6.12",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^22",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.2",
    "@vitest/browser": "^3.1.1",
    "autoprefixer": "^10.4.21",
    "chromatic": "^11.28.0",
    "eslint": "^9.23.0",
    "eslint-import-resolver-typescript": "^4.2.5",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-storybook": "^0.12.0",
    "eslint-plugin-testing-library": "^7.1.1",
    "globals": "^16.0.0",
    "jiti": "^2.4.2",
    "playwright": "^1.51.1",
    "postcss": "^8.5.3",
    "storybook": "^8.6.12",
    "storybook-addon-remix-react-router": "4.0.1",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.28.0",
