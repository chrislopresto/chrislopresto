{
  "name": "@chrislopresto/website",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "prepare": "panda codegen",
    "build": "react-router build",
    "dev": "react-router dev",
    "deploy": "react-router build && NODE_ENV=production wrangler deploy",
    "test": "vitest",
    "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "start": "wrangler types && wrangler dev",
    "nuke": "rm -rf .wrangler .cache node_modules/.cache",
    "typegen": "wrangler types",
    "typecheck": "react-router typegen && tsc --build --noEmit",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build -o ./public/storybook ; touch ./public/storybook/.gitkeep",
    "cloudflare:build": "pnpm run build && pnpm run storybook:build && cp -r ./public/storybook ./build/client/"
  },
  "dependencies": {
    "@radix-ui/react-accessible-icon": "^1.1.1",
    "@radix-ui/react-slot": "^1.1.1",
    "@react-router/cloudflare": "^7.1.1",
    "@react-router/node": "^7.1.1",
    "@react-router/serve": "^7.1.1",
    "@remixicon/react": "^4.1.1",
    "isbot": "^5.1.17",
    "jotai": "^2.6.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router": "^7.1.1",
    "session-context": "^0.0.6"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241112.0",
    "@mdx-js/rollup": "^3.1.0",
    "@pandacss/dev": "^0.50.0",
    "@storybook/addon-essentials": "^8.4.7",
    "@storybook/addon-interactions": "^8.4.7",
    "@storybook/addon-links": "^8.4.7",
    "@storybook/addon-themes": "^8.4.7",
    "@storybook/blocks": "^8.4.7",
    "@storybook/react": "^8.4.7",
    "@storybook/react-vite": "^8.4.7",
    "@storybook/test": "^8.4.7",
    "@testing-library/react": "^16.1.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@react-router/dev": "^7.1.1",
    "@types/node": "^20",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.1",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-storybook": "^0.6.15",
    "jsdom": "^25.0.1",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.16",
    "storybook": "^8.4.7",
    "storybook-addon-remix-react-router": "^3.0.2",
    "typescript": "^5.7.2",
    "vite": "^5.4.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^2.1.8",
    "wrangler": "^3.87.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
